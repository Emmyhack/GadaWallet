# Inheritance Keeper Bot Configuration
# Copy this file to .env and modify the values as needed

# Network configuration
KEEPER_NETWORK=devnet
# KEEPER_RPC_URL=https://api.devnet.solana.com

# Keeper wallet configuration
# KEEPER_WALLET_PATH=./keeper-wallet.json
KEEPER_MIN_BALANCE=0.01

# Monitoring configuration
KEEPER_CHECK_INTERVAL=5
KEEPER_BATCH_SIZE=10

# Target wallets (comma-separated, leave empty to discover all)
# KEEPER_TARGET_WALLETS=

# Logging configuration
KEEPER_VERBOSE=true
# KEEPER_LOG_FILE=./keeper-bot.log